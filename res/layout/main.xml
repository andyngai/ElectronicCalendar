<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android" 
	android:id="@+id/llMain"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:orientation="vertical">
    <RelativeLayout 
    	android:layout_height="wrap_content" 
    	android:layout_width="match_parent" 
    	android:id="@+id/rlRowButtonChoiceMonth" 
    	>
        
        <Button 
        	android:layout_height="wrap_content" 
        	android:text="Previous" 
        	android:layout_width="wrap_content" 
        	android:id="@+id/bt_previous_month"
        	android:layout_alignParentLeft="true"
  
        	>
        </Button>
        <TextView
        	 android:layout_height="wrap_content" 
        	 android:text="" 
        	 android:layout_width="wrap_content" 
        	 android:id="@+id/tv_current_month"
        	 android:layout_toRightOf="@+id/bt_previous_month"
        	 android:layout_centerHorizontal="true"
       		 android:layout_centerVertical="true"
       		 android:gravity="center"
        	 
        	 >
        </TextView>
        <Button 
        	android:layout_height="wrap_content" 
        	android:text="Next" 
        	android:layout_width="wrap_content" 
        	android:id="@+id/bt_next_month"
        	android:layout_toRightOf="@+id/tv_current_month"
        	android:layout_alignParentRight="true">
        </Button>
    </RelativeLayout>
    <LinearLayout 
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:id="@+id/llRowDay"
    	android:background="@android:color/white"
    	>
        <TextView
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:textAppearance="?android:attr/textAppearanceSmall" 
			android:text="Sun" 
			android:id="@+id/tv_day_1"
			android:background="@android:color/white"
			android:textColor="@android:color/black"
			>
		</TextView>
        <TextView 
        	android:layout_width="wrap_content" 
        	android:layout_height="wrap_content" 
        	android:textAppearance="?android:attr/textAppearanceSmall" 
        	android:id="@+id/tv_day_2" 
        	android:text="Mon"
        	android:background="@android:color/white"
        	android:textColor="@android:color/black"
        	>
        </TextView>
        <TextView 
        	android:layout_width="wrap_content" 
        	android:layout_height="wrap_content" 
        	android:textAppearance="?android:attr/textAppearanceSmall" 
        	android:id="@+id/tv_day_3" 
        	android:text="Tue"
        	android:background="@android:color/white"
        	android:textColor="@android:color/black"
        	>
        </TextView>
        <TextView 
        	android:layout_width="wrap_content" 
        	android:layout_height="wrap_content" 
        	android:textAppearance="?android:attr/textAppearanceSmall" 
        	android:id="@+id/tv_day_4" 
        	android:text="Wed"
        	android:background="@android:color/white"
        	android:textColor="@android:color/black"
        	>
        </TextView>
        <TextView 
        	android:layout_width="wrap_content" 
        	android:layout_height="wrap_content" 
        	android:textAppearance="?android:attr/textAppearanceSmall" 
        	android:id="@+id/tv_day_5" 
        	android:text="Thu"
        	android:background="@android:color/white"
        	android:textColor="@android:color/black"
        	>
        </TextView>
        <TextView 
        	android:layout_width="wrap_content" 
        	android:layout_height="wrap_content" 
        	android:textAppearance="?android:attr/textAppearanceSmall" 
        	android:id="@+id/tv_day_6" 
        	android:text="Fri"
        	android:background="@android:color/white"
        	android:textColor="@android:color/black"
        	>
        </TextView>
        <TextView 
        	android:layout_width="wrap_content" 
        	android:layout_height="wrap_content" 
        	android:textAppearance="?android:attr/textAppearanceSmall" 
        	android:id="@+id/tv_day_7" 
        	android:text="Sat"
        	android:background="@android:color/white"
        	android:textColor="@android:color/black"
        	>
        </TextView>
    </LinearLayout>

    <GridView 
    	xmlns:android="http://schemas.android.com/apk/res/android"
    	android:layout_height="fill_parent" 
    	android:layout_width="fill_parent" 
    	android:id="@+id/gv_calendar"
    	android:numColumns="7"
    	android:background="@android:color/white"
    	>
    </GridView>
</LinearLayout>
